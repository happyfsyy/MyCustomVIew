<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="numberTextSize" format="dimension"/>
    <attr name="numberColor" format="color"/>
    <attr name="numberText" format="string"/>
    <declare-styleable name="NumberView">
        <attr name="numberSize"/>
        <attr name="numberColor"/>
        <attr name="numberText"/>
    </declare-styleable>
    
    <declare-styleable name="ImageIntroView">
        <attr name="android:text"/>
        <attr name="introTextSize" format="dimension"/>
        <attr name="introTextColor" format="color"/>
        <attr name="imageSrc" format="reference"/>
        <attr name="imageScaleType">
            <enum name="fitXY" value="0"/>
            <enum name="fitCenter" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="firstColor" format="color"/>
    <attr name="secondColor" format="color"/>
    <declare-styleable name="CircularRingView">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="speed" format="integer"/>
        <attr name="ringWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VolumeControlView">
        <attr name="firstColor" />
        <attr name="secondColor"/>
        <attr name="dotWidth" format="dimension"/>
        <attr name="dotCount" format="integer"/>
        <attr name="splitSize" format="integer"/>
        <attr name="bgImage" format="reference"/>
    </declare-styleable>

    <attr name="rightPadding" format="dimension"/>
    <declare-styleable name="SlidingMenu">
        <attr name="rightPadding"/>
    </declare-styleable>
    <declare-styleable name="SlidingMenu2">
        <attr name="rightPadding"/>
    </declare-styleable>
</resources>