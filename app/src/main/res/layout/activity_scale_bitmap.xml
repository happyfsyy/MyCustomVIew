<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/linear_layout_padding">

    <SeekBar
        android:id="@+id/scale_bitmap_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="0"/>
    <com.example.mycustomview.view.MeiTuanRefreshFirstStepView
        android:id="@+id/scale_bitmap_first_step_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>
    <com.example.mycustomview.view.MeiTuanRefreshSecondStepView
        android:id="@+id/scale_bitmap_second_step_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <com.example.mycustomview.view.MeiTuanRefreshSecondStepView
        android:id="@+id/scale_bitmap_third_step_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/meituan_third_step_anim"/>
</LinearLayout>